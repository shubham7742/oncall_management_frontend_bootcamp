<head>
<style>
.right {
    float: right;
    width: 200px;
    border: 3px solid ;
    padding: 5px;
}
.left {
    float: right;
    width: 800px;
    border: 3px solid ;
    padding: 5px;
}
</style>
</head>
<div class="row">
    <div class="col s12">
            <h4>Title:{{model.singleTicket.heading}}</h4>
            <h4>ticket_Id:{{model.singleTicket.id}}</h4>

            <div class='right'>
            <h5>severity:</h5>{{model.singleTicket.severity}}<br>
           </div>
            <div class='left'>
                <h5>
            description:</h5>{{model.singleTicket.description}}
           </div>
           <div class='right'>
            <h5>Assignee:</h5>{{model.singleTicket.assignee}}
           </div><br><br><br><br>
           {{md-input label='Team' type='number' value=model.singleTicket.teamId class='col s12'}}
           {{md-input label='Assignee' type='number' value=model.singleTicket.assignee class='col s12'}}
           <button class='confirm-edit' {{action 'editTicket' model.singleTicket}}>EDIT</button>
           <div class="col s12"><h5>{{fa-icon "star"}} Add Log</h5></div>
            {{md-input label='Log_message'  value=log.logMessage class='col s12'}}<br>
            <button class='confirm-submit' {{action 'createLogSubmit' log model.singleTicket.id}}>ADD</button>
          {{!-- {{#log-box model = model}}{{/log-box}} --}}
          <div class="col s12"><h5>{{fa-icon "star"}} WorK Log List</h5></div>

          <ul>
          {{#each model.logList as |l|}}
          <li>
             Log_message:{{l.logMessage}}
         </li><br><br>
         {{/each}}
         </ul>


</div>
</div>
{{outlet}}